generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ENUM
enum UserRole {
  ADMIN
  USER
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ArticleCategory {
  NEWS
  EVENT
  ANNOUNCEMENT
}

enum eventStatus {
  UPCOMING
  ONGOING
  COMPLETED
}

enum BusinessStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  articles Article[]

  @@map("users")
}

model VillageProfile {
  id           Int       @id @default(autoincrement())
  villageName  String?   @map("village_name")
  address      String?   @db.Text
  email        String?
  phone        String?
  vision       String?   @db.Text
  mission      String?   @db.Text
  mapEmbedCode String?   @map("map_embed_code") @db.Text
  updatedAt    DateTime? @updatedAt @map("updated_at")

  @@map("village_profile")
}

model Article {
  id        Int              @id @default(autoincrement())
  title     String?
  content   String?          @db.Text
  thumbnail String?
  category  ArticleCategory?
  status    ArticleStatus    @default(DRAFT)
  createdAt DateTime         @default(now()) @map("created_at")

  authorId Int?  @map("author_id")
  author   User? @relation(fields: [authorId], references: [id])

  @@map("articles")
}

model Event {
  id          Int         @id @default(autoincrement())
  title       String?
  description String?     @db.Text
  location    String?
  startDate   DateTime?   @map("start_date")
  endDate     DateTime?   @map("end_date")
  image       String?
  status      eventStatus @default(UPCOMING)

  @@map("events")
}

model Business {
  id              Int            @id @default(autoincrement())
  type            String?
  status          BusinessStatus @default(PENDING)
  name            String?
  ownerName       String?        @map("owner_name")
  phoneNumber     String?        @map("phone_number")
  description     String?        @db.Text
  minimumPrice    Int?           @map("minimum_price")
  maximumPrice    Int?           @map("maximum_price")
  address         String?
  rejectionReason String?        @map("rejection_reason") @db.Text
  createdAt       DateTime       @default(now()) @map("created_at")

  BusinessGallery BusinessGallery[]

  @@map("businesses")
}

model BusinessGallery {
  id          Int       @id @default(autoincrement())
  businessId  Int       @map("business_id")
  title       String?
  description String?   @db.Text
  media       String?
  createdAt   DateTime? @default(now()) @map("created_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@map("business_gallery")
}

model TourismSpot {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String? @db.Text
  address       String?
  mapUrl        String? @map("map_url")
  ticketPrice   Int?    @map("ticket_price")
  openingHours  String? @map("opening_hours")
  closingHours  String? @map("closing_hours")
  contactPerson String? @map("contact_person")

  TourismSpotGallery  TourismSpotGallery[]
  TourismSpotFacility TourismSpotFacility[]

  @@map("tourism_spots")
}

model TourismSpotFacility {
  id            Int       @id @default(autoincrement())
  tourismSpotId Int       @map("tourism_spot_id")
  name          String?
  description   String?   @db.Text
  createdAt     DateTime? @default(now()) @map("created_at")

  tourismSpot TourismSpot @relation(fields: [tourismSpotId], references: [id], onDelete: Cascade)

  @@map("tourism_spot_facilities")
}

model TourismSpotGallery {
  id            Int       @id @default(autoincrement())
  tourismSpotId Int       @map("tourism_spot_id")
  title         String?
  description   String?   @db.Text
  media         String?
  createdAt     DateTime? @default(now()) @map("created_at")

  tourismSpot TourismSpot @relation(fields: [tourismSpotId], references: [id], onDelete: Cascade)

  @@map("tourism_spot_gallery")
}
